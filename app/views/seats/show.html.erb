<%- model_class = Seat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:seat_id) %>:</strong></dt>
  <dd><%= @seat.seat_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:row) %>:</strong></dt>
  <dd><%= @seat.row %></dd>
  <dt><strong><%= model_class.human_attribute_name(:column) %>:</strong></dt>
  <dd><%= @seat.column %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @seat.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @seat.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flight_id) %>:</strong></dt>
  <dd><%= @seat.flight_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              seats_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_seat_path(@seat), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              seat_path(@seat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
