<%= form_for @passenger_detail, :html => { :class => "form-horizontal passenger_detail" } do |f| %>

  <% if @passenger_detail.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@passenger_detail.errors.count, "error") %> prohibited this passenger_detail from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @passenger_detail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:first_name) %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_name) %>
  </div>
  <div class="form-group">
    <%= f.label :gender, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :gender, :class => 'form-control' %>
    </div>
    <%=f.error_span(:gender) %>
  </div>
  <div class="form-group">
    <%= f.label :nationality, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nationality, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nationality) %>
  </div>
  <div class="form-group">
    <%= f.label :passport_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :passport_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:passport_number) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                passenger_details_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
