<%- model_class = Flight -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:flight_name) %>:</strong></dt>
  <dd><%= @flight.flight_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departure_location) %>:</strong></dt>
  <dd><%= @flight.departure_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departure_date) %>:</strong></dt>
  <dd><%= @flight.departure_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departure_time) %>:</strong></dt>
  <dd><%= @flight.departure_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival_location) %>:</strong></dt>
  <dd><%= @flight.arrival_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival_date) %>:</strong></dt>
  <dd><%= @flight.arrival_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival_time) %>:</strong></dt>
  <dd><%= @flight.arrival_time %></dd>
</dl>

<% if user_signed_in? %>
<%if @fight.user_id == current_user.id %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              flights_path, :class => 'btn btn-default'  %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flight_path(@flight), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flight_path(@flight),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
<% end %>